html, body, #app, .theme-container {
  position: relative;
  width: 100vw;
  height: 100vh;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
  margin-bottom: 0.5rem;
  font-family: "Montserrat", sans-serif;
  font-weight: 700;
  line-height: 1.44;
  color: inherit;
  text-transform: uppercase;
  letter-spacing: 0.2em;
}

#app {
  .home .hero img {
    max-height 220px
  }

  .content {
    img {
      max-width 100% !important
    }
  }

  code {
    overflow-wrap break-word

  }

  .navbar {
    //border-bottom 1px solid $colorGray
    border-bottom: none;
    box-shadow 0px 0px 15px 0px rgba(132, 132, 132, 0.2) !important;

    .nav-links {
      margin-top: 0.2rem;
    }
  }

  .search-box {
    border-bottom 1px solid $colorGray
    margin-right 1.5rem

    input {
      background: #fff url(/search.svg) 0.1rem 0.3rem no-repeat;
      background-size: 1.5rem;
      border none;
    }

    .suggestions {
      font-size 1rem
      padding 0.5rem
      display block !important;
      font-family: clear;
      font-style: normal;
      font-weight: lighter;
      top: 2rem;
      border none;
      box-shadow 0px 0px 15px 0px rgba(132, 132, 132, 0.2);

      .page-title {
        font-weight: normal;
      }

      .header {
        font-weight: normal;
      }
    }
  }
}


body {
  font-weight lighter;
  font-family: "Cardo", "Times New Roman", Times, serif;
  font-size: 1.2rem;
  font-weight: 400;
  line-height: 1.5;
  color: #212529;
  background-color: #fff;
