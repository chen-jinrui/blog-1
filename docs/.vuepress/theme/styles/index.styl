.navbar .nav-links {
  a {
    white-space: nowrap;
    position: relative;
    border none !important;
  }

  a.router-link-active {
    &:after {
      content: "";
      position: absolute;
      top: 170%;
      left: -0.2em;
      right: -0.2em;
      bottom: -75%;
      background-color: $colorDark;
    }
  }

  a:hover {
    text-decoration: none !important;
    //&:after {
    //  top: -80%;
    //}
  }
}

.content__default {
  a {
    white-space: nowrap;
    position: relative;
  }

  a:after {
    content: "";
    position: absolute;
    top: 70%;
    left: -0.1em;
    right: -0.1em;
    bottom: -20%;
    transition: top 200ms cubic-bezier(0, 0.8, 0.13, 1);
    background-color: alpha(#0093D7, 0.2);
  }

  a:hover {
    text-decoration: none !important;

    &:after {
      top: 0%;
    }
  }
}

